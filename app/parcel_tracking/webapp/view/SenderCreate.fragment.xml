<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
<Page id="_IDGenPage1">
    <HBox
        id="_IDGenHBox1"
        justifyContent="End"
        class="responsiveHBox"
    />
    <f:Form
        id="FormDisplay354wideDual2"
        editable="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>

        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer12"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement122"
                        label="{i18n>shippingStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus1"
                                class="customStatus"
                                text="New"
                                icon="sap-icon://shipping-status"
                                state="Information"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement12"
                        label="{i18n>packageIDLabel}"
                        visible="false"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="packageID"
                                visible="false"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="packageNumber"
                                change=".SenderCreate.onPackageIDChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2222"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="packageWeight"
                                change=".SenderCreate.onDigitInputChange"
                                type="Number"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22222"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="packageHeight"
                                change=".SenderCreate.onDigitInputChange"
                                type="Number"
                            />
                        </f:fields>
                    </f:FormElement>
                    <!-- <f:FormElement id="_IDGenFormElementUpdateStatus">
              <f:fields>
                <Button id="updateStatusButton" tooltip="Update delivery status" icon="sap-icon://action" text="Update status" type="Emphasized" 
                        press="onUpdateStatus" ariaLabelledBy="actionButtonLabel" class="responsiveButton" enabled="false"/>
              </f:fields>
            </f:FormElement> -->
                </f:formElements>
            </f:FormContainer>

            <!-- Right Side: Package Destination and Receiver Details -->
            <f:FormContainer
                id="_IDGenFormContainer1222"
                title="Receiver Details"
            >
                <f:formElements>
                    <!-- <f:FormElement
                        id="_IDGenFormElement2we2222"
                        label="{i18n>shippingAddressLabel}"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="shippingAddress"
                                change="onInputChange"
                            />
                        </f:fields>
                    </f:FormElement> -->
                    <f:FormElement
                        id="_IDGenFormElement2we2233322"
                        label="Address Line"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="shippingAddressLine"
                                change=".SenderCreate.onInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2we2222222"
                        label="City/State"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="shippingCity"
                                change=".SenderCreate.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData12354"
                                        span="XL6 L5 M5 S8"
                                    />
                                </layoutData>
                            </Input>
                            <Input
                                value=""
                                id="shippingState"
                                change=".SenderCreate.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData2"
                                        span="XL2 L1 M3 S4"
                                    />
                                </layoutData>
                            </Input>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2we22322222"
                        label="Country/Postal"
                    >
                        <f:fields>
                            <Input
                                value=""
                                id="shippingCountry"
                                change=".SenderCreate.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData1235"
                                        span="XL6 L5 M5 S8"
                                    />
                                </layoutData>
                            </Input>
                            <Input
                                value=""
                                id="shippingPostal"
                                change=".SenderCreate.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData1"
                                        span="XL2 L1 M3 S4"
                                    />
                                </layoutData>
                            </Input>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElementpackageCreationAt"
                        label="{i18n>packageReceiverLabel}"
                    >
                        <f:fields>
                            <ComboBox
                                id="_IDGenComboBox1"
                                items="{/Users}"
                                change=".SenderCreate.onComboBoxChange"
                                selectedKey=""
                            >
                                <core:Item
                                    id="_IDGenItem1"
                                    key="{ID}"
                                    text="{first_name} {last_name}"
                                />
                            </ComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
      <footer>
                            <OverflowToolbar id="overflowToolbar123">
                                <content>
                                    <ToolbarSpacer id="toolbarSpacer123" />
                                    <!-- <Button
                                        id="onCancel"
                                        text="Cancel"
                                        press=".SenderCreate.onCancel"
                                        icon="sap-icon://cancel"
                                    /> -->
                                    <Button
                                        id="onSubmit"
                                        text="Submit"
                                        type="Emphasized"
                                        press=".SenderCreate.onSubmit"
                                        icon="sap-icon://complete"
                                    />
                                </content>
                            </OverflowToolbar>
                        </footer>
    </Page>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
  <Page id="_IDGenPage1">
    <HBox
        id="_IDGenHBox1"
        justifyContent="End"
        class="responsiveHBox"
    />
    <f:Form
        id="packageEditForm"
        editable="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>

        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer12"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement122"
                        label="{i18n>shippingStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus1"
                                class="customStatus"
                                text="{path: 'shippingStatus', formatter: '.SenderEdit.textFormatter', targetType: 'any'}"
                                icon="sap-icon://shipping-status"
                                state="{path: 'shippingStatus', formatter: '.SenderEdit.stateFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement12"
                        label="{i18n>packageIDLabel}"
                        visible="false"
                    >
                        <f:fields>
                            <Input
                                value="{ID}"
                                id="packageID"
                                editable="false"
                                visible="false"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{path: 'packageNumber', mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="packageNumber"
                                editable="false"
                                change="onInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2222"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{weight}"
                                id="packageWeight"
                                editable="false"
                                change="onDigitInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22222"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Input
                                value="{height}"
                                id="packageHeight"
                                editable="false"
                                change="onDigitInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <!-- <f:FormElement id="_IDGenFormElementUpdateStatus">
              <f:fields>
                <Button id="updateStatusButton" tooltip="Update delivery status" icon="sap-icon://action" text="Update status" type="Emphasized" 
                        press="onUpdateStatus" ariaLabelledBy="actionButtonLabel" class="responsiveButton" enabled="false"/>
              </f:fields>
            </f:FormElement> -->
                </f:formElements>
            </f:FormContainer>

            <!-- Right Side: Package Destination and Receiver Details -->
            <f:FormContainer
                id="_IDGenFormContainer1222"
                title="Receiver Details"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement2we2233322"
                        label="Address Line"
                    >
                        <f:fields>
                            <Input
                                value="{path: 'shippingAddress/addressLine', mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="shippingAddressLine"
                                change=".SenderEdit.onInputChange"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2we2222222"
                        label="City/State"
                    >
                        <f:fields>
                            <Input
                                value="{path:'shippingAddress/city', mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="shippingCity"
                                change=".SenderEdit.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData1235"
                                        span="XL6 L5 M5 S8"
                                    />
                                </layoutData>
                            </Input>
                            <Input
                                value="{path:'shippingAddress/state' , mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="shippingState"
                                change=".SenderEdit.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData2"
                                        span="XL2 L1 M3 S4"
                                    />
                                </layoutData>
                            </Input>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2we22322222"
                        label="Country/Postal"
                    >
                        <f:fields>
                            <Input
                                value="{path: 'shippingAddress/country', mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="shippingCountry"
                                change=".SenderEdit.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData123"
                                        span="XL6 L5 M5 S8"
                                    />
                                </layoutData>
                            </Input>

                            <Input
                                value="{path: 'shippingAddress/postalCode' , mode: 'sap.ui.model.BindingMode.OneWay'}"
                                id="shippingPostal"
                                change=".SenderEdit.onInputChange"
                            >
                                <layoutData>
                                    <l:GridData
                                        id="_IDGenGridData1"
                                        span="XL2 L1 M3 S4"
                                    />
                                </layoutData>
                            </Input>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElementpackageCreationAt"
                        label="{i18n>packageReceiverLabel}"
                    >
                        <f:fields>
                            <ComboBox
                                id="_IDGenComboBox1"
                                items="{/Users}"
                                selectionChange="onSelectChange"
                                change=".SenderEdit.onComboBoxChange"
                                selectedKey="{path: 'receiver_ID', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            >
                                <core:Item
                                    id="_IDGenItem1"
                                    key="{ID}"
                                    text="{first_name} {last_name}"
                                />
                            </ComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>

    <f:Form
        id="packageDetailsForm"
        editable="false"
        visible="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12333"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>
        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer15"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement125"
                        label="{i18n>shippingStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus5"
                                class="customStatus"
                                text="{path: 'shippingStatus', formatter: '.SenderEdit.textFormatter', targetType: 'any'}"
                                icon="sap-icon://shipping-status"
                                state="{path: 'shippingStatus', formatter: '.SenderEdit.stateFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement55"
                        label="{i18n>packageIDLabel}"
                        visible="false"
                    >
                        <f:fields>
                            <Label
                                id="packageIDLabel"
                                text="{ID}"
                                visible="false"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement555555"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageNumberLabel"
                                text="{path: 'packageNumber', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement555"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageWeightLabel"
                                text="{weight}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement55555"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageHeightLabel"
                                text="{height}"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>

            <!-- Right Side: Package Destination and Receiver Details -->
            <f:FormContainer
                id="_IDGenFormContainer55"
                title="Receiver Details"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement545"
                        label="Address Line"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressLabel"
                                text="{path: 'shippingAddress/addressLine', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement5422215"
                        label="City/State"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressCityLabel"
                                text="{path: 'shippingAddress/city', mode: 'sap.ui.model.BindingMode.OneWay'}/{path: 'shippingAddress/state', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement5422215122112"
                        label="Country/PostalCode"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressCountryLabel"
                                text="{path: 'shippingAddress/country', mode: 'sap.ui.model.BindingMode.OneWay'}/{path: 'shippingAddress/postalCode', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElementpackageReceiver"
                        label="{i18n>packageReceiverLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageReceiverLabel"
                                text="{receiver/first_name} {receiver/last_name}"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
  
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <content>
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <Button
                        id="onCancel"
                        text="Cancel"
                        press=".SenderEdit.onCancel"
                        icon="sap-icon://cancel"
                        class="floatLeft"
                    />
                    <Button
                        id="cancelShippingButton"
                        text="Cancel Shipping"
                        press=".SenderEdit.onCancelShipping"
                        icon="sap-icon://cancel"
                        class="floatLeft"
                    />
                    <Button
                        id="updateStatusButton"
                        tooltip="Update delivery status"
                        icon="sap-icon://shipping-status"
                        text="Update status"
                        type="Emphasized"
                        press=".SenderEdit.onUpdateStatus"
                        ariaLabelledBy="actionButtonLabel"
                        enabled="false"
                    />
                    <Button
                        id="onSubmit"
                        text="Submit"
                        press=".SenderEdit.onSubmit"
                        icon="sap-icon://complete"
                        type="Emphasized"
                        ariaLabelledBy="actionButtonLabel"
                        visible="false"
                    />

                    <Button
                        id="onEdit"
                        text="Edit"
                        press=".SenderEdit.onEnableEditMode"
                        icon="sap-icon://complete"
                        type="Emphasized"
                        ariaLabelledBy="actionButtonLabel"
                    />
                </content>
            </OverflowToolbar>
        </footer>
    </Page>
</core:FragmentDefinition>

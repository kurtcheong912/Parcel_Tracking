<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
<Page id="_IDGenPage1">
    <f:Form
        id="FormDisplay354wideDual2"
        editable="false"
    >
        <f:layout>
            <f:ResponsiveGridLayout
                id="_IDGenResponsiveGridLayout12"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="true"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            />
        </f:layout>

        <f:formContainers>
            <!-- Left Side: Package Info -->
            <f:FormContainer
                id="_IDGenFormContainer12"
                title="{i18n>packageInfoTitle}"
            >
                <f:formElements>
                                   <f:FormElement
                        id="_IDGenFormElement122"
                        label="{i18n>shippingStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus1"
                                text="{path: 'shippingStatus', formatter: '.ReceiverDetail.textFormatter'}"
                                class="customStatus"
                                icon="sap-icon://shipping-status"
                                state="{path: 'shippingStatus', formatter: '.ReceiverDetail.stateFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement1242"
                        label="{i18n>packageStatusLabel}"
                    >
                        <f:fields>
                            <ObjectStatus
                                id="_IDGenObjectStatus2"
                                text="{path: 'packageStatus', formatter: '.ReceiverDetail.textFormatter'}"
                                class="customStatus"
                                icon="{path: 'packageStatus', formatter: '.ReceiverDetail.iconFormatter'}"
                                state="{path: 'packageStatus', formatter: '.ReceiverDetail.packageFormatter'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement12"
                        label="{i18n>packageInfoTitle}"
                        visible="false"
                    >
                        <f:fields>
                            <Text
                                text="{ID}"
                                id="packageID"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22"
                        label="{i18n>packageNumberLabel}"
                    >
                        <f:fields>
                            <Text
                                text="{packageNumber}"
                                id="packageNumber"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement2222"
                        label="{i18n>packageWeightLabel}"
                    >
                        <f:fields>
                            <Text
                                text="{weight}"
                                id="packageWeight"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement22222"
                        label="{i18n>packageHeightLabel}"
                    >
                        <f:fields>
                            <Text
                                text="{height}"
                                id="packageHeight"
                            />
                        </f:fields>
                    </f:FormElement> 
                    <f:FormElement
                        id="_IDGenFormElement22222222"
                        label="{i18n>userConfirmationLabel}"
                    >
                        <f:fields>
                            <Image
                                id="_IDGenImage12"
                                src="{signature}"
                                width="200px"
                                height="100px"
                                alt="Signature"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>

            <f:FormContainer
                id="_IDGenFormContainer55"
                title="Receiver Details"
            >
                <f:formElements>
                    <f:FormElement
                        id="_IDGenFormElement545"
                        label="Address Line"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressLabel"
                                text="{path: 'shippingAddress/addressLine', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement5422215"
                        label="City/State"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressCityLabel"
                                text="{path: 'shippingAddress/city', mode: 'sap.ui.model.BindingMode.OneWay'}/{path: 'shippingAddress/state', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElement5422215122112"
                        label="Country/PostalCode"
                    >
                        <f:fields>
                            <Label
                                id="shippingAddressCountryLabel"
                                text="{path: 'shippingAddress/country', mode: 'sap.ui.model.BindingMode.OneWay'}/{path: 'shippingAddress/postalCode', mode: 'sap.ui.model.BindingMode.OneWay'}"
                            />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement
                        id="_IDGenFormElementpackageReceiver"
                        label="{i18n>packageReceiverLabel}"
                    >
                        <f:fields>
                            <Label
                                id="packageReceiverLabel"
                                text="{receiver/first_name} {receiver/last_name}"
                            />
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
     <footer>
                            <OverflowToolbar id="toggleableButtonSection">
                                <content>
                                    <ToolbarSpacer id="toolbarSpacer124" />
                                    <Button
                                        id="onCancelEdit"
                                        text="Order Received"
                                        press=".ReceiverDetail.onOrderReceived"
                                        icon="sap-icon://status-completed"
                                        type="Emphasized"
                                    />
                                    <Button
                                        id="onSubmitEdit"
                                        text="Order Damaged"
                                        press=".ReceiverDetail.onOrderDamaged"
                                        icon="sap-icon://alert"
                                        type="Critical"
                                    />
                                </content>
                            </OverflowToolbar>
                        </footer>
    </Page>
</core:FragmentDefinition>
